{
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "icon.png"
    },
    "name": "Aligner",
    "description": "Chrome extension for image align",
    "version": "2.0",
    "icons":{
        "128" : "icon_128.png"
    },
    "update_url": "https://www.dropbox.com/s/yy1owhg6ak2q04g/updates.xml",
    "web_accessible_resources": [
        "*"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "matches": [ "*://*/*" ],
        "persistent": false,
        "scripts": ["background.js"],
        "run_at": "document_end"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}